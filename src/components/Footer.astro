---
import { SITE_USER } from '@/consts'

const today = new Date()

const response = await fetch(`https://api.github.com/users/${SITE_USER}`)
const user = await response.json()
---

<footer class="py-[10px] flex flex-col items-center text-[14px] text-[#333]">
	<a href={`https://github.com/${SITE_USER}`} target="_blank">
		[ GitHub ]
	</a>
	&copy; {today.getFullYear()} { user.name } All rights reserved.
</footer>
