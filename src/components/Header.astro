---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, SITE_USER } from '@/consts';

const headerLinkList = [
	{ id: 'frontend', label: '前端', href: '/blog' },
	{ id: 'linux', label: 'Linux', href: '/blog' },
]

const response = await fetch(`https://api.github.com/users/${SITE_USER}`)
const user = await response.json()
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			{
				headerLinkList.map(item => (
					<HeaderLink href={ item.href }>{ item.label }</HeaderLink>
				))
			}
		</div>
		<a href={`https://github.com/${SITE_USER}`} target="_blank">
			<span class="sr-only">{ `Go to ${user.name}'s GitHub repo` }</span>
			<div class="w-[20px] h-[20px] bg-[--main-font]" style="mask: url('/github.svg') no-repeat center center"></div>
		</a>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
